{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "tsconfig.json",
    "scripts/entrypoints.ts",
    "scripts/getRollupConfig.ts"
  ],
  "pipeline": {
    "codegen:entrypoints": {
      "outputs": [
        "links/**",
        "shared/**",
        "server/**",
        "ssg/**",
        "adapters/**",
        "http/**",
        "observable/**",
        "rpc/**",
        "subscription/**",
        "package.json"
      ]
    },
    "codegen:bigBoi": {
      "outputs": ["server/__generated__/bigBoi/**"]
    },
    "prebuild": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build", "codegen:entrypoints", "prebuild"],
      "outputs": [".next/**", "dist/**", "build/**", "docs/typedoc/**"]
    },
    "@examples/minimal-react#build": {
      "outputs": ["client/dist/**", "server/dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "lint-fix": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build", "codegen:bigBoi"],
      "cache": false
    },
    "test-ci": {
      "dependsOn": ["^build", "codegen:bigBoi"],
      "cache": false
    },
    "test-dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test-start": {
      "dependsOn": ["^build", "build"],
      "cache": false
    },
    "test-watch": {
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    }
  }
}
